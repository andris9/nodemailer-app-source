{
    "name": "NodemailerApp",
    "private": true,
    "productName": "NodemailerApp",
    "version": "1.0.11",
    "description": "The ultimate email debugging tool",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "npm run sendmail && node build.js && electron-forge make && node teardown.js",
        "publish": "npm run sendmail && node build.js && electron-forge publish && node teardown.js",
        "sendmail": "rimraf ./sendmail && nexe sendmail.js --ico=./src/icons/win/icon.ico",
        "sendmail-linux": "mkdirp builds && rimraf builds/sendmail && nexe sendmail.js --target=linux-x64 --output=builds/sendmail",
        "sendmail-windows": "mkdirp builds && rimraf builds/sendmail.exe && nexe sendmail.js --build --ico=./src/icons/win/icon.ico --target=win32-x86_x64 --output=builds/sendmail",
        "snap": "rimraf build &&  mkdirp build && cp -r src/icons/png build/icons && node build.js && electron-builder build --linux snap && node teardown.js",
        "snap-publish": "snapcraft push --release=stable dist/NodemailerApp_*_amd64.snap",
        "test": "grunt"
    },
    "keywords": [],
    "author": {
        "name": "Andris Reinman",
        "email": "andris@kreata.ee"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {
                "appBundleId": "com.kreata.nodemailer",
                "asar": true,
                "buildVersion": "",
                "icon": "",
                "appCopyright": "© 2019 Andris Reinman",
                "appCategoryType": "public.app-category.utilities",
                "win32metadata": {
                    "CompanyName": "Andris Reinman",
                    "requested-execution-level": "asInvoker"
                },
                "osxSign": {
                    "identity": "Developer ID Application: Andris Reinman (8JM6VJ352Q)",
                    "hardenedRuntime": true,
                    "gatekeeper-assess": false,
                    "entitlements": "entitlements.mac.plist",
                    "entitlements-inherit": "entitlements.mac.plist"
                },
                "osxNotarize": {
                    "appleId": "andris.reinman@kreata.ee",
                    "appleIdPassword": "@keychain:AC_PASSWORD",
                    "ascProvider": "8JM6VJ352Q"
                },
                "extraResource": []
            },
            "plugins": [
                [
                    "@electron-forge/plugin-auto-unpack-natives"
                ]
            ],
            "makers": [
                {
                    "name": "@electron-forge/maker-zip"
                },
                {
                    "name": "@electron-forge/maker-squirrel",
                    "platforms": [
                        "win32"
                    ],
                    "config": {
                        "name": "NodemailerApp"
                    }
                },
                {
                    "name": "@electron-forge/maker-dmg",
                    "platforms": [
                        "darwin"
                    ],
                    "config": {
                        "backgroundColor": "#ffffff",
                        "format": "ULFO",
                        "icon": "./src/icons/mac/icon.icns",
                        "window": {
                            "width": 540,
                            "height": 380
                        }
                    }
                },
                {
                    "name": "@electron-forge/maker-pkg",
                    "platforms": [
                        "darwin"
                    ],
                    "config": {
                        "identity": "Developer ID Installer: Andris Reinman (8JM6VJ352Q)",
                        "license": "./eula.html",
                        "isVersionChecked": false,
                        "hasStrictIdentifier": false
                    }
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "platforms": [
                        "linux"
                    ],
                    "config": {
                        "options": {
                            "maintainer": "Andris Reinman",
                            "homepage": "https://nodemailer.com"
                        }
                    }
                }
            ],
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "platforms": [
                        "darwin",
                        "win32"
                    ],
                    "config": {
                        "authToken": "0c31a67f143987790e43acfe38ffb4c45d92f803",
                        "repository": {
                            "owner": "Nodemailer",
                            "name": "nodemailer-app"
                        },
                        "prerelease": false
                    }
                }
            ]
        }
    },
    "build": {
        "appId": "com.kreata.nodemailer",
        "copyright": "© 2019 Andris Reinman",
        "snap": {
            "confinement": "strict",
            "summary": "The ultimate email debugging tool"
        },
        "linux": {
            "category": "Network",
            "icon": "./src/icons/png/256x256.png"
        },
        "asar": true
    },
    "dependencies": {
        "@electron-forge/maker-deb": "6.0.0-beta.45",
        "about-window": "1.13.2",
        "appdata-path": "1.0.0",
        "base32.js": "0.1.0",
        "browserbox2": "1.0.5",
        "chokidar": "3.3.0",
        "doc-ready": "1.0.4",
        "electron-squirrel-startup": "1.0.0",
        "eventsource": "^1.0.7",
        "html-to-text": "5.1.1",
        "humanize": "0.0.9",
        "humanparser": "1.11.0",
        "iconv-lite": "0.5.0",
        "isemail": "3.2.0",
        "js-beautify": "1.10.2",
        "level": "6.0.0",
        "libmime": "4.2.1",
        "maildir-scan": "2.1.1",
        "mailsplit": "4.6.3",
        "mbox-reader": "1.1.3",
        "moment": "2.24.0",
        "node-fetch": "^2.6.0",
        "node-tnef": "1.3.2",
        "nodemailer": "6.4.1",
        "plist": "3.0.1",
        "recursive-readdir": "2.2.2",
        "rimraf": "3.0.0",
        "save-dev": "0.0.1-security",
        "smtp-server": "3.5.0",
        "sqlite3": "4.1.1",
        "uuid": "3.3.3"
    },
    "devDependencies": {
        "@electron-forge/cli": "6.0.0-beta.45",
        "@electron-forge/maker-dmg": "6.0.0-beta.45",
        "@electron-forge/maker-pkg": "6.0.0-beta.45",
        "@electron-forge/maker-snap": "6.0.0-beta.45",
        "@electron-forge/maker-squirrel": "6.0.0-beta.45",
        "@electron-forge/maker-zip": "6.0.0-beta.45",
        "@electron-forge/plugin-auto-unpack-natives": "6.0.0-beta.45",
        "@electron-forge/publisher-github": "6.0.0-beta.45",
        "@electron-forge/publisher-snapcraft": "6.0.0-beta.45",
        "dotenv": "8.2.0",
        "electron": "7.1.3",
        "electron-builder": "21.2.0",
        "electron-notarize": "0.2.1",
        "eslint": "6.7.2",
        "eslint-config-nodemailer": "1.2.0",
        "eslint-config-prettier": "6.7.0",
        "grunt": "1.0.4",
        "grunt-cli": "1.3.2",
        "grunt-eslint": "22.0.0",
        "nexe": "3.3.2",
        "node-abi": "2.13.0"
    }
}
